<h2>Search for Card(s)</h2>
<%= form_with(url: search_cards_path, method: :get, local: true, class: 'form-inline', id: 'search-form') do |f| %>
    <div>
        <%= f.label :card_name, 'Card Name', class: 'form-label' %>
        <%= f.text_field :card_name %>
    </div>

    <div>
        <%= f.label :set, 'Set', class: 'form-label' %>
        <%= f.text_field :set %>
    </div>

    <div>
        <%= f.label :card_type, 'Card Type', class: 'form-label' %>
        <%= f.text_field :card_type %>
    </div>

    <div>
        <%= f.submit 'Search for Card(s)' %>
    </div>

    <h3>If no search terms are entered, all cards will be shown</h3>
<% end %>

